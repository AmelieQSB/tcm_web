extends ../layout

block content
   .container
      .row
        table.table.table-hover.table-bordered
           thead
             tr
               th 文章标题
               th 作者
               th 发布时间
               th 简介
               th 录入时间
               th 查看
               th 更新
               th 删除
           tbody
              each item in tcms
                tr(class="item-id-#{item._id}")
                    td #{item.title}
                    td #{item.author}
                    td #{item.year}
                    td #{item.summary}
                    td #{moment(item.meta.createAt).format(MM/DD/YYYY)}
                    td: a(target="_blank",href="../detail/#{item._id}") 查看
                    td: a(target="_blank",href="../admin/control/update/#{item._id}") 修改
                    td
                     button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
   script(src="/javascripts/admin.js")
