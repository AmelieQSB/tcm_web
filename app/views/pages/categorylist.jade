extends ../includes/layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 文章分类
                        th 文章标题
                        th 时间
                        th 查看
                        th 修改
                        th 删除
                tbody
                    each item in categories
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td
                                each unit in item.tcms
                                  |  #{unit.title}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            td: a(target="_blank",href="/results?cat=#{item._id}&p=0") 查看
                            td: a(target="_blank",href="/admin/tcm/list") 修改
                            td
                                button.btn.btn-danger.categorylistDel(type="button",data-id="#{item._id}") 删除
    script(src="/javascripts/tcm_admin.js")



