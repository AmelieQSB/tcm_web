extends ../includes/layout

block content
    .container
        .row
        each cat in categories
            .panel.panel-default
                .page-heading
                    h3
                        a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
                .panel-body
                    if cat.tcms && cat.tcms.length > 0
                        each item in cat.tcms
                            .col-md-2
                                .thumbnail
                                    a(href="/tcm/#{item, _id}")
                                        if item.poster.indexOf('http:') > -1
                                            img(src="{item.poster}",alt="#{item.title}")
                                        else
                                            img(src="/upload/#{item.poster}",alt="#{item.title}")
                                    .caption
                                        h4 #{item.title}
                                        p: a.btn.btn-primary(href="/tcm/#{item._id}",role="button") 查看文章详情
