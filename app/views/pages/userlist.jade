extends ../includes/layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 名字
                        th 注册时间
                        th 查看
                        th 修改
                        th 删除
                tbody
                    each item in users
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.createAt).format(MM / DD / YYYY)}
                            td: a(target="_blank",href="/tcm/#{item._id}") 查看
                            td: a(target="_blank",href="/admin/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.userDel(type="button",data-id="#{item._id}") 删除
    //script(src="/javascripts/admin.js")
script(src="javascripts/user_list.js")