//公用部分 头部
.container
    .row
        .page-header.clearfix
            h1= title
            .col-md-4
                small 中医养生网
            .col-md-8
                form(method='GET',action='/results')
                    .input-group.col-sm-4.pull-right
                        input.form-control(type='text',name='q')
                        span.input-group-btn
                            button.btn.btn-default(type='submit') 搜索
.navbar.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            a.navbar-text.navbar-right
        if user
            p.navbar-text.navbar-right
                a: span 欢迎您,#{user.name}
                span &nbsp;&nbsp;|&nbsp;&nbsp;
                a.navbar-link(href="/logout") 退出
        else
            p.navbar-text.navbar-right#sign
                a.navbar-link(href="/signup") 注册
                span &nbsp;|&nbsp;
                a.navbar-link(href="/signin") 登录
    .nav-wrap
        if user && user.role > 10
            ul.clearfix
                li: a(href="/admin/Category/new" target="_blank") 文章分类录入页
                li: a(href="/admin/category/list" target="_blank") 文章分类列表页
                li: a(href="/admin/tcm/new" target="_blank") 文章录入页
                li: a(href="/admin/tcm/list" target="_blank") 文章列表页
                li: a(href="/admin/user/list" target="_blank") 用户列表页


